public class TalkMore {
	public static void main(String[] args){
		char answer;
		/* Making and Object for SavitchIn */
		SavitchIn savitchIn = new SavitchIn();
		System.out.println("Want to talk some more? (y/n)");
		
		answer = savitchIn.readLineNonwhiteChar();

		if(answer == 'n'){
			System.out.println("Too bad. You seem like such a nice person.");
			
		}
		else if(answer == 'y'){
			System.out.println("Well screw you I don't");
		}
		
		System.out.println("Want to talk some more? (y/n/m)");
		
		answer = savitchIn.readLineNonwhiteChar();
		if(answer == 'n'){
			System.out.println("Fine");
		}
		else if(answer == 'y'){
			System.out.println("Sorry, I don't have time for you...");
		}
		else if(answer == 'm'){
			System.out.println("Sorry, but I can't wait for your decision. /n Good-bye");
		}
		
	}
}
